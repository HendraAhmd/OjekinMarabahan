<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <ImageView
        android:id="@+id/admin_panel_link"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_text_format"
        android:layout_marginStart="255dp"
        android:layout_marginTop="24dp" />

    <ImageView
        android:id="@+id/driver_panel_link"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_baseline_directions_car_24"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp" />

    <ImageView
        android:id="@+id/login_applogo"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:src="@drawable/logoojekin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="#ffff"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_below="@id/login_applogo"
        android:layout_marginTop="20dp"
        >

        <LinearLayout
            android:layout_marginBottom="14dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/nlight"
                android:text="Nama Pengguna"
                android:textColor="@color/blackPrimary"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/login_username_input"
                android:inputType="text"
                android:fontFamily="@font/nlight"
                android:textColor="@color/blackPrimary"
                android:paddingLeft="12dp"
                android:lines="1"
                android:background="@drawable/bg_input_edit"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="14dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/nlight"
                android:text="Password"
                android:textColor="@color/blackPrimary"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/login_password_input"
                android:fontFamily="@font/nlight"
                android:inputType="textPassword"
                android:textColor="@color/blackPrimary"
                android:paddingLeft="12dp"
                android:lines="1"
                android:background="@drawable/bg_input_edit"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>

        <Button
            android:id="@+id/login_btn"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/nlight"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/orange_buttons"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Login"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/not_admin_panel_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Saya bukan admin?"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/login_btn"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="25dp"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/not_driver_panel_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Saya bukan driver"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/not_admin_panel_link"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="25dp"
            android:visibility="invisible"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/text1"
        android:fontFamily="@font/nlight"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Belum punya akun?"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_below="@id/linear_layout1"
        android:textColor="@color/blackPrimary"
        />

    <TextView
        android:fontFamily="@font/nlight"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/create_account_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Daftar"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_below="@id/text1"
        android:textColor="@color/materialYellow"
        />

</RelativeLayout>